{
  "name": "testallurereporting",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean:reports":"rm -rf allure-report allure-results && mkdir -p allure-report allure-results",
    "generate:reports":"npx allure generate \"./allure-results\" --clean",
    "open:reports":"npx allure open \"./allure-report\"",
    "pretest":"npm run clean:reports",
    "posttest": "npm run generate:reports && npm run open:reports",
    "execute:script":"npx playwright test ./tests/smoke/test1.spec.ts --project=chromium",
    "test":"npm run execute:script || npm run posttest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@types/node": "^22.1.0",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^3.0.0-beta.7",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1"
  }
}
